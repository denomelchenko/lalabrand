type Item {
    id: ID!
    title: String!,
    shortDisc: String!,
    longDisc: String!,
    rating: String,
    price: Float!,
    availableCount: Int!,
    salePrice: Float,
    image: String,
    soldCount: Int!
}

extend type Query {
    bestSellers(limit: Int): [Item],
    itemsByTitle(title: String): [Item],
    itemsByCategoryId(categoryId: Int): [Item]
}